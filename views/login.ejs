<%- include header %>

  <div class="container login">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <form class="bs-example form-horizontal" method='post' action=''>
          <fieldset>
            <% if (error) { %>
              <div class="alert alert-dismissable alert-danger login-fail"><button class="close" type='button' data-dismiss='alert'>&times;</button> <p><%= error %></p></div>
            <% } %>
            <legend>Login</legend>
            <p class="last-p">
              Once you enter your credentials and hit the Login button below,
              your credentials will be securely sent to
              <a href="https://stormpath.com">Stormpath</a> and verified.  If
              your credentials are valid, you'll be logged in using a secure
              session -- otherwise, you'll get a user friendly error message.
            </p>
            <div class="form-group">
              <label class="col-lg-4 control-label" for='username'>Email</label>
              <div class="col-lg-4">
                <input id="username" class="form-control" type='email' name='username' placeholder='Email' autofocus>
              </div>
            </div>
            <div class="form-group">
              <label class="col-lg-4 control-label" for='password'>Password</label>
              <div class="col-lg-4">
                <input id="password" class="form-control" type='password' name='password' placeholder='password'>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-4">
                <button class="btn btn-primary" type='submit'>Login</button>
          </fieldset>
        </form>
      </div>
    </div>
  </div>

<%- include footer %>
