<%- include header %>
<div class="container login">
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-6">
			<form class="form-horizontal" style="padding-top:30px;" method='post' action=''>
				<% if (error) { %>
			  		<div class="alert alert-dismissable alert-danger login-fail"><button class="close" type='button' data-dismiss='alert'>&times;</button> <p><%= error %></p></div>
				<% } %>
				
				<legend>Login</legend>
				<div class="input-group">
					<span class="input-group-addon" id="username">Email</span>
					<input type='email' name='username' class='form-control' id='username' aria-describedby='username' autofocus>
				</div>
				<br>
				<div class="input-group">
					<span class="input-group-addon" id="password">Pass&nbsp;</span>
					<input type='password' name='password' class='form-control' id='password' aria-describedby='password'>
				</div>
				<br>
				<div class="input-group">
					<div class="pull-right">
						<button class="btn btn-primary" type='submit'>Login</button>
		  			</div>
		  		</div>
		  	</form>
		</div>
		<div class="col-lg-3"></div>
	</div>
</div>
<%- include footer %>

